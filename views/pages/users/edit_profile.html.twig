{% extends 'layouts/main.html.twig' %}

{% block body %}


<form action="http://localhost:8000/save_user_data" method="POST" enctype="multipart/form-data">

    <img id="preimage" src="" height="120px" >
    <input type="hidden" id="csrf" name="csrf" value="{{ csrf }}">

    <div class="mb-3">
        <label for="photo" class="form-label">Photo</label>
        <input type="file" name="upload" class="form-control" onchange="loadfile(event)">
        <p id="email_error" style="color: red;"></p>
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control">
        <p id="email_error" style="color: red;"></p>
    </div>

    <br>
    <button type="submit" class="btn btn-primary" id="form_register">Submit</button>
</form>

<!-- image preview -->
<script type="text/javascript">
    function loadfile(event) {
        var output=document.getElementById('preimage');
        output.src=URL.createObjectURL(event.target.files[0]);
    };
</script>


{% endblock %}